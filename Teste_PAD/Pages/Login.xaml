<Page
    x:Class="Teste_PAD.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Teste_PAD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Imagens/back.jpg" AlignmentX="Left" AlignmentY="Top">
            </ImageBrush>
        </Grid.Background>
        <StackPanel x:Name="stkPanel" Padding="0 50 0 0">
            <TextBlock x:Name="tblock_Login" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Login" FontSize="32" Padding="0 50 0 0"/>
            <TextBlock x:Name="tblock_Username" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" RenderTransformOrigin="0.582,1.8" Padding="0 50 0 0" />
            <TextBox x:Name="tb_Username" HorizontalAlignment="Stretch"  TextWrapping="Wrap" PlaceholderText="Username" RenderTransformOrigin="0.794,0.531" Margin="100 10 100 0"/>
            <TextBlock x:Name="tblock_Password" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" Padding="0 10 0 0"/>
            <PasswordBox x:Name="pb_Password" HorizontalAlignment="Stretch" PlaceholderText="Password" Margin="100 10 100 0" />
            <Button x:Name="b_Login" Content="Login"  HorizontalAlignment="Stretch" Click="b_Login_Click" Background="DarkBlue" Margin="100 50 100 0"/>
        <Button x:Name="b_Register" Content="Register" HorizontalAlignment="Stretch" Background="DarkCyan" Click="b_Register_Click" Margin="100 10 100 0"/>
        <Frame Name="MyFrame">
        </Frame>
        </StackPanel>
    </Grid>
</Page>
